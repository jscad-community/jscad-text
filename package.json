{
  "name": "jscad-text",
  "version": "3.0.2",
  "description": "JSCAD module to convert text to 2D paths, using TTF (and other) fonts",
  "type": "commonjs",
  "main": "./dist/src/index.js",
  "exports": "./dist/src/index.js",
  "browser": "./dist/jscad-text.min.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "require": "./dist/src/index.js",
      "browser": "./dist/jscad-text.min.js",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "compile": "tsc --target es6 --module commonjs",
    "package": "rollup --config",
    "test": "ava '**/*.test.ts'"
  },
  "keywords": [
    "jscad",
    "text",
    "font",
    "ttf",
    "outline"
  ],
  "author": "z3dev",
  "license": "MIT",
  "dependencies": {
    "@jscad/modeling": "^2.12.0",
    "opentype.js": "^1.3.0"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/opentype.js": "^1.3.0",
    "ava": "^6.1.0",
    "rollup": "^4.40.0",
    "typescript": "^5.5.0"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "tests/": "dist/tests/"
      },
      "compile": false
    }
  }
}
